<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.JoiPrimeMembershipActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:navigationIcon="@drawable/left_arrow"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/splash"
            android:layout_width="120dp"
            android:layout_height="120dp">
        </ImageView>

        <Button
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="JOIN PRIME"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="#DAFF0202"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
        </Button>

        <TextView
            android:layout_marginTop="10dp"
            android:text="CONTINUE UNLIMITED\nFUN FOR 1YEAR"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <android.support.v7.widget.CardView
            android:layout_margin="20dp"
            android:background="@drawable/cardview_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/cardview_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="The-Sams Prime Membership Plan"
                    android:paddingLeft="10dp"
                    android:layout_margin="10dp"
                    android:textSize="17sp"
                    android:textColor="#D5000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:text="Get additional benifits with the-Sams \nPrime Membership"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="#BE000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:text="Valid till 31st March 2020"
                        android:paddingLeft="20dp"
                        android:textSize="15sp"
                        android:textColor="#BE000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <Button
                        android:text="Rs. 99/-"
                        android:textAllCaps="false"
                        android:background="#4CAF50"
                        android:textColor="@color/colorWhite"
                        android:textSize="18dp"
                        android:layout_marginLeft="35dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </Button>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_joinNow"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:background="@color/colorLightBlue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </Button>





            </LinearLayout>






        </android.support.v7.widget.CardView>









    </LinearLayout>


</RelativeLayout>