<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        app:cardMaxElevation="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/cardview_light_background"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_ongoingServiceName"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Window Ac Repair"
                android:textColor="#B9000000"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ongoing_Cust_Name"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Air conditioner Air conditioner"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" />
            <TextView
                android:id="@+id/ongoing_Cus_Add"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Air Conditiner Air conditioner"
                android:layout_height="wrap_content"/>

        </LinearLayout>





    </LinearLayout>
